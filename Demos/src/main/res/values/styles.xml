<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="EstimoteTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="toolbarStyle">@style/EstimoteToolbar</item>
  </style>

  <style name="EstimoteToolbar" parent="Theme.AppCompat.NoActionBar">
    <item name="android:background">@color/primary</item>
    <item name="android:textColorPrimary">@color/black</item>
    <item name="android:textColorSecondary">@color/black</item>
  </style>

  <style name="EstimoteButton" parent="Base.Widget.AppCompat.Button">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">6dp</item>
    <item name="android:layout_marginLeft">8dp</item>
    <item name="android:layout_marginRight">8dp</item>
    <item name="android:padding">4dp</item>
  </style>

</resources>